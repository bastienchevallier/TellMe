<h1>Categories</h1>

<table class="table">
 <thead>
   <th>Name</th>
   <th>Image</th>
 </thead>

  {{#list categories}}

  <tr>
    <td>
      <a class="btn btn-secondary btn-sm" href="/categories/id/{{id}}" role="button"> 
        {{name}}
      </a>
    </td>
    <td>
      <img src="{{image}}" height="70" width="100" />
    </td>
    <td>
      <a class="btn btn-outline-secondary btn-sm" href="/categories/update/{{id}}" role="button">
        Update
      </a>
      <a class="btn btn-outline-danger btn-sm" href="/categories/delete/{{id}}" role="button">
        Delete
      </a>
    </td>
  </tr>

  {{/list}}
</table>

<div class="text-center">
  <a class="btn btn-primary" href="/categories/create" role="button">
    Add a categorie
  </a>
</div>