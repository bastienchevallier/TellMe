<h1>Update grammatical nature</h1>

<form action="/grammars/update/{{grammar.id}}" method="post">
  <div class="form-group">
    <label for="name">Name*</label>
    <input value="{{grammar.name}}" class="form-control" type="text" id="name" name="name" placeholder="Grammatical nature's name" required>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Update
    </button>
  </div>
</form>